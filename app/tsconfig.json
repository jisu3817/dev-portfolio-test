{
  "compilerOptions": {
    "target": "es5",                                  
    "module": "commonjs",                                
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            
    "strict": true,   
    "outDir": "dist/",		                                   
    "skipLibCheck": true,
    "types": ["jest", "node", "@types/jest"],                              
  },
  "include": ["./**/*"],
  "exclude": ["node_modules"],
  "typeRoots": ["./src/@types/", "./node_modules/@types"]
}
